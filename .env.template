# AI Base Project - Environment Variables Template
# Copy this file to .env and customize for your environment

# =============================================================================
# NODE.JS CONFIGURATION
# =============================================================================
NODE_OPTIONS=--no-deprecation

# =============================================================================
# REACT FRONTEND CONFIGURATION  
# =============================================================================
# React App Environment Variables (must be prefixed with REACT_APP_)
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_PROJECT_VERSION=v1

# Development server configuration
HOST=localhost
PORT=3000
BROWSER=none
SKIP_PREFLIGHT_CHECK=true

# =============================================================================
# BACKEND API CONFIGURATION (Future)
# =============================================================================
# API_PORT=8000
# API_HOST=localhost
# DATABASE_URL=sqlite:///ai_base.db

# =============================================================================
# DATABASE CONFIGURATION (Future)
# =============================================================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ai_base
# DB_USER=ai_user
# DB_PASSWORD=your_secure_password_here

# =============================================================================
# AUTHENTICATION & SECURITY (Future)
# =============================================================================
# JWT_SECRET=your_secure_jwt_secret_here
# CORS_ORIGINS=http://localhost:3000

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable/disable debugging features
DEBUG=true
LOG_LEVEL=info

# Hot reloading settings
FAST_REFRESH=true
GENERATE_SOURCEMAP=true

# =============================================================================
